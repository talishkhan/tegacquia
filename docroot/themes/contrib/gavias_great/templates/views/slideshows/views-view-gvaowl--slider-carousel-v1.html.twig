{% if attributes -%}
   <div{{ attributes.addClass('slidershow-posts') }}>
{% endif %}
   
   {% set i = 0 %}
   {% for row in rows %}
      {% set i = i + 1 %}
      {% if i % 5 == 1 %}<div class="item">{% endif %}

      {% if i % 5 == 1 or i % 5 == 2 %}
         {% if i % 5 == 1 %}
            <div class="post-small post-item no-padding col-sm-3 col-xs-12">
         {% endif %}
            <div class="item content post-small-item">{{ row.content }}</div>
         {% if i % 5 == 2 or i == rows|length %}
            </div>
         {% endif %}      
      {% endif %}  

      {% if i % 5 == 3 %}
         <div class="post-large post-item no-padding col-sm-6 col-xs-12">
            <div class="item content">{{ row.content }}</div>
         </div>
      {% endif %}   

      {% if i % 5 == 4 or i % 5 == 0 %}
         {% if i % 5 == 4 %}
            <div class="post-small post-item no-padding col-sm-3 col-xs-12">
         {% endif %}
            <div class="item content post-small-item">{{ row.content }}</div>
         {% if i % 5 == 0 or i == rows|length %}
            </div>
         {% endif %}      
      {% endif %}  

      {% if i % 5 == 0 or i == rows|length %}</div>{% endif %}

   {% endfor %}   
{% if attributes -%}
    </div>
{% endif %}
