{#
/**
 * @file
 * Default theme implementation for a views mini-pager.
 *
 * Available variables:
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 *
 * @ingroup themeable
 */
#}
{% if items.previous or items.next %}
  <nav role="navigation">
    <h4 class="visually-hidden">{{ 'Pagination'|t }}</h4>
    <ul class="js-pager__items">
      {% if items.previous %}
        <li class="prev">
          <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
            <span><i class="fa fa-angle-left"></i></span>
          </a>
        </li>
      {% else %}
        <li class="prev"><span class="disable-show"><i class="fa fa-angle-left"></i></span></li>
      {% endif %}
      {% if items.current %}
        <li class="hidden">
          {% trans %}
            Page {{ items.current }}
          {% endtrans %}
        </li>
      {% endif %}
      {% if items.next %}
        <li class="next">
          <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
            <span><i class="fa fa-angle-right"></i></span>
          </a>
        </li>
      {% else %}
        <li class="next"><span class="disable-show"><i class="fa fa-angle-right"></i></span></li>
      {% endif %}
    </ul>
  </nav>
{% endif %}